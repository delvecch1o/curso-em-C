#include <stdio.h>
#include <stdlib.h>

int main() {
	int idade;
	printf("Informe a sua idade : ");
	scanf ("%d", &idade);
	
	if (idade <= 5){     // if === se
		printf("bebe\n");
	}
	else if (idade > 5 && idade <= 10) {   // && nesse contexto significa a letra e do portugues
		printf("Crianca\n");
	}
	else if  (idade > 10 && idade < 18) {  // else ==== caso contrario
	printf ("Abolescente\n");
	}
	else if  (idade >= 18 && idade <= 50) {
		printf("Adulto\n");
	}
	
	else if (idade > 50 && idade <= 100) {
		printf ("Idoso");
	}
	else {
		printf ("Fazendo Hora Extra na Terra\n");
	}
	
	
	
	return 0;
}
